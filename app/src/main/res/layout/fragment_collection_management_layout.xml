<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:background="#334053"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:id="@+id/ll_shouye"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/head_icon_home"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:text="首页"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pop"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:text="水稻" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_list_inverted_triangle"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_geren"
        android:paddingRight="20dp"
        android:gravity="right|center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/head_icon_user"
            />
        <TextView

            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:text="个人中心"
            />

    </LinearLayout>
</LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <View
            android:layout_width="700dp"
            android:layout_height="2dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="696dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="试验任务编号"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:id="@+id/ll_pop1"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/frame_textview"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_syrwbh"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="编号1"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/layer_list_inverted_triangle" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="696dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="模板名称"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:id="@+id/ll_pop2"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/frame_textview"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_mbmc"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:padding="5dp"
                            android:text="模板1"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/layer_list_inverted_triangle" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="696dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="生育期"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:id="@+id/ll_pop3"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/frame_textview"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_syq"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:padding="5dp"
                            android:text="生育期1"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/layer_list_inverted_triangle"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="696dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="性状"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:id="@+id/ll_pop4"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/frame_textview"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_xz"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:padding="5dp"
                            android:text="性状1"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/layer_list_inverted_triangle" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="696dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="重复数"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:id="@+id/ll_pop5"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/frame_textview"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_cfs"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:padding="5dp"
                            android:text="1"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/layer_list_inverted_triangle" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent" />

                    <CheckBox
                        android:id="@+id/cb_yichang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="异常" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />
        </LinearLayout>

        <View
            android:layout_width="700dp"
            android:layout_height="2dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:gravity="center"
            android:background="#F2F2F2"
            android:layout_width="700dp"
            android:layout_height="50dp">
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
             <Button
                 android:id="@+id/bt_queren"
                 android:gravity="center"
                 android:text="确认"
                 android:textColor="#fff"
                 android:background="@drawable/shape_small_label_signin_"
                 android:layout_width="100dp"
                 android:layout_height="40dp" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6" />
        </LinearLayout>

        <View
            android:layout_width="700dp"
            android:layout_height="2dp"
            android:background="#E6E6E6" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
