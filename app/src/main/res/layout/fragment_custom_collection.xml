<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#334053"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:id="@+id/ll_shouye"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/head_icon_home"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:gravity="center"
                android:text="首页"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:gravity="center"
                android:text="自定义采集" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_geren"
            android:paddingRight="20dp"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/head_icon_user"
                />
            <TextView

                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:gravity="center"
                android:text="个人中心"
                />

        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_search"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/frame_textview"
            />
        <LinearLayout
            android:id="@+id/layout_default"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView

                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@mipmap/icon_search"
                />
          <TextView
android:layout_marginLeft="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="搜索"

              />
        </LinearLayout>
    </FrameLayout>
<LinearLayout
    android:paddingTop="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <TextView
        android:id="@+id/tv_individual"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#009987"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="个体观测性状采集"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:background="#009987"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="群体观测性状采集"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_abnormal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:background="#009987"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="异常性状采集"
        android:textColor="#fff"
        android:textSize="20dp" />
<LinearLayout
    android:gravity="right|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/tv_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#49B0FD"
        android:padding="5dp"
        android:text="确定选择"


        android:textColor="#fff" />
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#49B0FD"
        android:padding="5dp"
        android:text="取消选择"


        android:textColor="#fff" />
</LinearLayout>

</LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
android:orientation="horizontal"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="55dp">
<View
    android:background="#E6E6E6"
    android:layout_width="2dp"
    android:layout_height="match_parent"/>
        <TextView
            android:layout_width="45dp"
            android:layout_height="match_parent" />

        <View
            android:background="#E6E6E6"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center_vertical"
            android:text="实验任务编号"
            android:layout_marginLeft="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <View
            android:background="#E6E6E6"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <LinearLayout
            android:id="@+id/ll_sc_custom_collection_fragment"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </LinearLayout>
    </ScrollView>
</LinearLayout>


</LinearLayout>
