<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="数据采集" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/icon_close" />


    </LinearLayout>

    <View
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_csbh"
            android:text="14198494A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=">>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_xzmc"
            android:text="性状名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
<LinearLayout
    android:gravity="center"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#b1abab" />

        <LinearLayout
            android:id="@+id/tv_zhouqi"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b1abab" />

            <LinearLayout
                android:id="@+id/tv_zhouqi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="周期" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b1abab" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_zhouqi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b1abab" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/tv_zhouqi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b1abab" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_zhouqi4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b1abab" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#b1abab" />
    </LinearLayout>
    <HorizontalScrollView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_sc_synsj"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
<LinearLayout
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView

        android:background="@drawable/shape_small_label_signin_"
     android:gravity="center"
        android:id="@+id/tv_queren"
        android:text="确认"
        android:layout_width="60dp"
        android:layout_height="30dp" />
    <TextView
        android:gravity="center"
        android:background="@drawable/shape_small_label_signin_"
        android:layout_marginLeft="50dp"
        android:id="@+id/tv_chongzhi"
        android:text="重置"
        android:layout_width="60dp"
        android:layout_height="30dp" />

</LinearLayout>
</LinearLayout>
