<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/head_include_layout"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="25dp"
            android:background="#F0F0F0"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_personal_head_portrait"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="150dp"

                android:src="@mipmap/user_img"
                app:riv_oval="true" />
<LinearLayout
    android:orientation="vertical"
    android:layout_marginLeft="50dp"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent">
<LinearLayout
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal"

    >
    <TextView
        android:id="@+id/tv_user_name"
        android:textColor="#333333"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:text="周海涛"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:visibility="invisible"
        android:textColor="#727272"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:text="测试员"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:gravity="center_vertical"
            android:text="上次登录时间"
            android:textColor="#727272"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_login_time"
            android:layout_marginLeft="30dp"
            android:textColor="#727272"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:text="2018-08-01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
        </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="40dp"/>



        <LinearLayout
            android:id="@+id/ll_personal_version_information"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:paddingTop="11dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/user_icon02" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="版本信息"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="V1.0版" />

        </LinearLayout>

        <View
            android:layout_marginLeft="200dp"
            android:layout_marginRight="200dp"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:id="@+id/ll_personal_threshold_management"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:paddingTop="11dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/user_icon03" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=" 阈值管理"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_launcher"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_marginLeft="200dp"
            android:layout_marginRight="200dp"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:id="@+id/ll_personal_data_update"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:paddingTop="11dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/user_icon04" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="数据更新"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_launcher"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_marginLeft="200dp"
            android:layout_marginRight="200dp"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:id="@+id/ll_personal_functional_introduction"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:paddingTop="11dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/user_icon05" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="功能介绍"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_launcher"
                android:visibility="gone" />

        </LinearLayout>

        <View

            android:layout_marginLeft="200dp"
            android:layout_marginRight="200dp"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout

            android:id="@+id/ll_personal_relation_haracter"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:paddingTop="11dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/user_icon03" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="关联性状设置"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_launcher"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_marginLeft="200dp"
            android:layout_marginRight="200dp"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:id="@+id/tv_personal_out"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="250dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_small_label_signout_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="退出登录"
            android:textSize="35dp"
            android:gravity="center"
            android:textColor="#fff"
            />
    </LinearLayout>

</ScrollView>
</LinearLayout>
