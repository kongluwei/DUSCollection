<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_fl_1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <include  layout="@layout/head_include_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
android:id="@+id/tv_syq"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:padding="10dp"
            android:text="生育期：灌浆期"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_xz"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:padding="10dp"
            android:text="性状：植株：单株穗数"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/tv_xzxl"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/layer_list_inverted_triangle" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/ll_xx"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_xx"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:padding="10dp"
            android:text="选项"
            android:textSize="25dp" />

        <TextView
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/layer_list_inverted_triangle" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#BDBDBD"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:id="@+id/ll_character_category_Choice"
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <TextView
            android:background="#fff"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个体观测性状"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="群体观测性状"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="个体异常性状"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="群体异常性状"
            android:textSize="20dp" />

    </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_frgmt_administration"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
    <LinearLayout
        android:background="#F2F2F2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="70dp">
<TextView
    android:textColor="#fff"
    android:background="@drawable/shape_small_label_1"
    android:gravity="center"
    android:id="@+id/tv_bc"
    android:padding="10dp"
    android:textSize="20dp"
    android:text="保存"
    android:layout_width="80dp"
    android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fff"
            android:layout_marginLeft="50dp"
            android:background="@drawable/shape_small_label_1"
            android:gravity="center"
            android:id="@+id/tv_schuang"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="上传"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:alpha="0.5"
    android:id="@+id/ll_fl_2"
    android:visibility="gone"
    android:padding="100dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<ImageView
    android:layout_margin="100dp"
    android:id="@+id/iv_fl_ll"
    android:src="@mipmap/logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</LinearLayout>
    </FrameLayout>
</LinearLayout>
